{

    "manifest_version": 2,
    "name": "CryptoBlocker",
    "version": "1.0",

    "description": "Block cryptojacking scripts via CPU detection and blacklisting",

    "icons": {
        "48": "icons/cb-48.png"
    },
    "background": {
        "page": "bgChecker.html",
        "type": "module"
    },

    "browser_action": {
        "default_icon": "icons/cb-48.png",
        "default_popup": "options.html",
        "default_title": "CryptoBlocker"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "Daniil.Musin@urfu.me" 
        }
    },

    "permissions": [
            "activeTab",
            "webRequest",
            "webRequestBlocking",
            "<all_urls>",
            "system.cpu",
            "storage",
            "processes",
            "tabs"
        ]

}
